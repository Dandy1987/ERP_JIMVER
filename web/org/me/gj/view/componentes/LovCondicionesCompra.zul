            <hlayout>
                <cell align="right" valign="bottom">
                    <label value="DESCRIPCION:" />
                </cell>
                <textbox id="txt_busqueda" value="%%" width="300px" focus="true" maxlength="45" tooltiptext="Ingrese los nombres del supervisor, MÃ¡ximo 50 caracteres"/>
            </hlayout>
            <listbox id="lst_condiciones_compra" mold="paging" pageSize="13" width="410px">
                <listhead>
                    <listheader label="CODIGO" width="110px"/>
                    <listheader label="DESCRIPCION" width="300px"/>
                </listhead>	
                <template name="model">
