<?xml version="1.0" encoding="UTF-8"?>

<zk xmlns="http://www.zkoss.org/2005/zul">
    <window id="w_lov_areas" title="BUSQUEDA DE ÁREAS" border="normal" width="438px"
            apply="org.me.gj.controller.componentes.ControllerLovAreas"
            position="center,center" closable="true"
            action="show: slideDown;hide: slideUp">
        <vlayout>
            <hbox align="center">
                <cell align="right" valign="center">
                    <label value="ÁREAS :" />
                </cell>
                <textbox id="txt_busqueda_areas" value="%%" width="335px" focus="true" maxlength="80" tooltiptext="Ingrese el Regimen Pensionario"/>
            </hbox>
            <listbox id="lst_areas" mold="paging" pageSize="13" width="410px">
                <listhead>
                    <listheader label="ID" width="50px" align="center"/>
                    <listheader label="ÁREAS"/>
                    <!--<listheader label="NOMBRES" width="200px"/>-->
                </listhead>	
                <template name="model">
                    <listitem>
                        <listcell label="${each.area_id}"/>
                        <listcell label="${each.area_des}"/>                        
                    </listitem>
                </template>
            </listbox>
        </vlayout>
    </window>
</zk>